<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/full_parent_layout"
        android:padding="10dp"
        android:background="@drawable/background_image">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="92">
                <TextView
                    android:id="@+id/full_album_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="image name"
                    android:textColor="#000000"
                    android:textSize="24sp"/>
                <TextView
                    android:id="@+id/full_album_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dd.mm.yyyy hh:mm"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/share"
                android:layout_weight="8"
                android:layout_marginTop="10dp"
                android:id="@+id/full_share_button"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/full_album"
            android:src="@drawable/pic1" />

        <TextView
            android:id="@+id/full_album_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="20dp"
            android:text="Image full description"
            />
    </LinearLayout>

</ScrollView>